{
  "data": {
    "raw_dir": "data/raw",
    "price_col": "mid",
    "horizon": 1,
    "neutral_threshold": 0.0,
    "train_test_split": {
      "test_size": 0.2,
      "random_state": 42,
      "stratify": true
    },
    "tuning_split": {
      "tune_frac": 0.3,
      "val_test_size": 0.2,
      "random_state": 42,
      "stratify": true
    },
    "train_max_rows_env": "TRAIN_MAX_ROWS"
  },
  "features": {
    "basic": [
      "mid",
      "spread",
      "top_bid_depth",
      "top_ask_depth",
      "order_book_imbalance"
    ],
    "orderflow": {
      "return_windows": [1, 5, 10, 20],
      "volatility_windows": [20, 50],
      "cvd_window": 20,
      "volume_trend_windows": [20]
    },
    "feature_matrix": {
      "columns": [
        "mid",
        "spread",
        "top_bid_depth",
        "top_ask_depth",
        "order_book_imbalance",
        "ret_1",
        "ret_5",
        "ret_10",
        "ret_20",
        "volatility_20",
        "volatility_50",
        "signed_volume",
        "cvd_20",
        "volume_trend_20",
        "volume_zscore_20"
      ],
      "drop_na": true
    }
  },
  "model": {
    "type": "HistGradientBoostingClassifier",
    "search_candidates": [
      {
        "learning_rate": 0.05,
        "max_depth": 6,
        "min_samples_leaf": 50
      },
      {
        "learning_rate": 0.1,
        "max_depth": 6,
        "min_samples_leaf": 50
      },
      {
        "learning_rate": 0.05,
        "max_depth": 8,
        "min_samples_leaf": 30
      }
    ],
    "chosen_params": {
      "learning_rate": 0.05,
      "max_depth": 8,
      "min_samples_leaf": 30,
      "max_iter": 300,
      "random_state": 42
    }
  },
  "artifacts": {
    "model_path": "artifacts/hgb_model.joblib",
    "predictions_path": "artifacts/hgb_test_predictions.csv"
  }
}
